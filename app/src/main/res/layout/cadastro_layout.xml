<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:textColor="#C60043"
            android:drawableTop="@drawable/ic_baseline_arrow_back_ios_24"
            />
        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#E8E8E8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:textColor="#C60043"
            android:textSize="33sp"
            android:text="Create new account" />

        <EditText android:inputType="text"
            android:padding="10sp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:hint="Full name " />

        <EditText android:inputType="number"
            android:padding="10sp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:hint="Phone number" />

        <EditText android:inputType="textEmailAddress"
            android:padding="10sp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:hint="E-mail or phone number" />

        <EditText
            android:inputType="numberPassword"
            android:padding="10sp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:hint="Passaword"
            android:layout_marginBottom="10dp"/>  <!-- Remove o texto in-->

        <Button
            android:textAllCaps="false"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="#E4467C"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/primary_text_dark_nodisable"
            android:layout_margin="30dp"
            android:text="Sign Uo" />



    </LinearLayout>
</LinearLayout>